<%= form_for [@vote, @comment] do |f| %>
<%= f.label :content %><br>
<%= f.text_area :content, rows: 10, cols: 60 %><br>
<%= f.hidden_field :vote_id %>
<%= f.hidden_field :user_id %>
<%= f.fields_for :vote do |ff| %>
<%= ff.label :vote_type %>
<%= ff.select :vote_type, Vote.vote_types.keys %>
<%= ff.submit %>
<% end %>
<% end %>
