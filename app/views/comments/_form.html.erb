<h1>Add a comment for your <%= @vote.vote_type %> for <%= @vote.city.name %></h1>
<%= form_for [@vote, @comment] do |f| %>
<%= render 'layouts/error_messages', object: @comment %>
<%= f.label :content %><br>
<%= f.text_area :content, rows: 10, cols: 60 %><br>
<%= f.hidden_field :vote_id %>
<%= f.submit %>
<% end %>
